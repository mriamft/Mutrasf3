<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="420dp"
        android:background="#FFFFFF"
        android:src="@drawable/foodtruck"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.006"
        app:srcCompat="@drawable/foodtruck" />

    <Button
        android:id="@+id/login"
        android:layout_width="362dp"
        android:layout_height="55dp"
        android:layout_marginBottom="112dp"
        android:background="@drawable/regbtn"
        android:elevation="200dp"
        android:paddingTop="8dp"
        android:text="Login"
        android:textColor="#434343"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/signup"
        android:layout_width="353dp"
        android:layout_height="52dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/signupbttn"
        android:backgroundTint="#F3B763"
        android:text="SignUp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/welcom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Welcome!"
        android:textColor="#69447B"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/welcomestat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/welcomestat"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginBottom="204dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Easy way to find a good FoodTruck to your special event! "
        android:textAlignment="viewStart"
        android:textColor="#D3783F94"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>